@using WebApplication2.Models;
@model List<Schedule>
@{
    ViewData["Title"] = "Schdule";
}
<div class="container">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Doctor Schedule</h1>

        <div class="col-lg-12">
            <a asp-controller="Doctor" asp-action="AddOrUpdateSchedule" class="text-white btn btn-danger border btn-block">
                Add Your Schedule
            </a>

            <table class="table table-hover mt-3 table-striped">
                <tbody>
                    <tr>
                        <th>Doctor Name</th>
                        <th>Clinic Location</th>
                        <th>Days</th>
                        <th>Clinic Start Time</th>
                        <th>Clinic End Time</th>
                        <th>Action</th>
                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Doctor.Name
                                </td>
                                <td>
                                    @item.Location
                                </td>
                                <td>
                                    @item.WeekDay.Name
                                </td>
                                <td>
                                    @item.ClinicStartTime
                                </td>
                                <td>
                                    @item.ClinicEndTime
                                </td>
                                <td>
                                    <a asp-controller="Doctor" asp-action="AddOrUpdateSchedule" class="text-white btn btn-warning" asp-route-id="@item.Id">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Doctor" asp-action="DeleteSchedule" asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
