@using WebApplication2.Models;
@model List<User>

<div class="container">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Users</h1>

        <div class="col-lg-12">
            <a asp-controller="Admin" asp-action="AddOrUpdateUser" class="text-white btn btn-danger border">
                Add New Record
            </a>

            <table class="table table-hover mt-3 table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Joined On</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id

                                </td>
                                <td>
                                    @item.Name

                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.PhoneNumber
                                </td>
                                <td>
                                    @item.JoinOn
                                </td>
                                <td>
                                    @item.Role.Name
                                </td>
                                <td>
                                    <a asp-controller="Admin" asp-action="AddOrUpdateUser" class="text-white btn btn-warning" asp-route-id="@item.Id">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
