@using WebApplication2.Models;
@model List<Appointment>

<div class="container-fluid">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Appointments</h1>

        <div class="col-lg-12">
            <a asp-controller="Admin" asp-action="AddOrUpdateAppointment" class="text-white btn btn-danger border">
                Add New Record
            </a>

            <table class="table table-hover mt-3 table-striped">
                <tbody>
                    <tr>
                        <th>Patient Name</th>
                        <th>Patient Age</th>
                        <th>Patient Email</th>
                        <th>Patient BloodGroup</th>
                        <th>Patient Gender</th>
                        <th>Patient Phone No</th>
                        <th>Doctor Name</th>
                        <th>Doctor Category</th>
                        <th>Doctor Fees</th>
                        <th>Reason for Appointment</th>
                        <th>Appointment Status</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.PatientName

                                </td>
                                <td>
                                    @item.PatientAge

                                </td>
                                <td>
                                    @item.PatientEmail

                                </td>
                                <td>
                                    @item.BloodGroup.Name
                                </td>
                                <td>
                                    @item.PatientGender
                                </td>
                                <td>
                                    @item.PatientPhoneNo
                                </td>
                                <td>
                                    @item.Doctor.Name
                                </td>
                                <td>
                                    @item.DoctorCategory.Name
                                </td>
                                <td>
                                    @item.Doctor.Fees
                                </td>
                                <td>
                                    @item.ReasonForAppointment
                                </td>
                                 <td>
                                    @item.AppointmentStatus.Name
                                </td>
                                <td>
                                    @item.CreatedAt
                                </td>

                                <td>
                                    <a asp-controller="Admin" asp-action="AddOrUpdateAppointment" class="text-white btn btn-warning" asp-route-id="@item.Id">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteAppointment"
                               asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
