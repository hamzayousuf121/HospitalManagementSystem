@using WebApplication2.Models;
@model Doctor

<div class="container">
    <h1 class="text-danger mt-3 text-center">Add Doctor</h1>

    <div class="mt-4">
        <form asp-controller="Admin" asp-action="AddOrUpdateDoctor" method="post">
            <div class="form-outline mb-3">
                <input type="text" class="form-control" />
                <label class="form-label">Name</label>n 
            </div>
            <div class="form-outline mb-3">
                <input type="number" class="form-control" />
                <label class="form-label">Age</label>
            </div>
            <div class="form-outline mb-3">
                <input type="number" class="form-control" />
                <label class="form-label">Fees</label>
            </div>
            <label class="form-label">Upload Your Image</label>
            <div class="form-outline mb-3">
                <input type="file" class="form-control" />
            </div>
            <div class="form-outline mb-3 mb-4">
                <textarea class="form-control" rows="3"></textarea>
                <label class="form-label">Adress Details</label>
            </div>
            <div class="form-outline mb-3 mb-4">
                <textarea class="form-control" rows="3"></textarea>
                <label class="form-label">About</label>
            </div>

            <div class="form-outline mb-3">
                <input type="number" class="form-control" />
                <label class="form-label">Degree</label>
            </div>
            <div class="form-outline mb-3">
                <input type="number" class="form-control" />
                <label class="form-label">Education</label>
            </div>
            <div class="form-outline mb-3">
                <input type="number" class="form-control" />
                <label class="form-label">Designation</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" asp-items="@ViewBag.DoctorCategories">
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Status</label>
                <select class="form-select" asp-items="@ViewBag.DoctorStatuses">
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Branch</label>
                <select class="form-select" asp-items="@ViewBag.Branches">
                </select>
            </div>
            <button type="submit" class="btn btn-block btn-danger">Submit</button>
        </form>

    </div>

</div>
