@using WebApplication2.Models
@model List<ImageSlider>


<div class="container mt-4">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Image Sliders</h1>

        <div class="d-flex flex-start">    
                <a asp-controller="Admin" asp-action="AddOrUpdateImageSlider" class="text-white btn btn-danger">
                    Add new Record
                </a>     
        </div>
        <table class="table table-hover mt-3 table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>ImageUrl</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Url
                            </td>
                            <td>
                                <img src="/assets/img/@item.Url" alt="Image" height="300" width="550" />
                            </td>
                            
                            <td>
                                <a asp-controller="Admin" asp-action="AddOrUpdateImageSlider" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                    Edit
                                </a>
                                <a asp-controller="Admin" asp-action="DeleteImageSlider" asp-route-id="@item.Id" class="btn btn-danger text-white">
                                    Delete
                                </a>

                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>

    </div>
</div>
