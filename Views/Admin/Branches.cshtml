@using WebApplication2.Models
@model List<Branch>

<div class="container mt-4">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Branches</h1>

        <div class="d-flex flex-start">
            <a asp-controller="Admin" asp-action="AddOrUpdateBranch" class="text-white btn btn-danger">
                Add New Record
            </a>
        </div>
        <table class="table table-hover mt-3 table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Branch Name</th>
                    <th>City Name</th>
                    <th>Action</th>
                </tr>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Name
                            </td>
                             <td>
                                @item.City.Name
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-action="AddOrUpdateBranch" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                    Edit
                                </a>
                                <a asp-controller="Admin" asp-action="DeleteBranch" asp-route-id="@item.Id" class="btn btn-danger text-white">
                                    Delete
                                </a>

                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>

    </div>
</div>
