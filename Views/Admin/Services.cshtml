@using WebApplication2.Models;
@model List<Service>

<div class="container">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Service</h1>

        <div class="col-lg-12">
            <a asp-controller="Admin" asp-action="AddOrUpdateService" class="text-white btn btn-danger border btn-block">
                Add Your Service
            </a>

            <table class="table table-hover mt-3 table-striped">
                <tbody>
                    <tr>
                        <th>Service Title</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Title

                                </td>
                                <td>
                                    <img src="~/assets/img/@item.ImageUrl" width="150" height="200" alt="@item.Title" />
                                </td>
                              
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <button class="btn btn-warning">
                                        <a asp-controller="Admin" asp-action="AddOrUpdateService" class="text-white">
                                            Edit
                                        </a>
                                    </button>
                                    <button class="btn btn-danger" asp-controller="Admin" asp-action="DeleteService"
                                    asp-route-id="@item.Id">Delete</button>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
