@using WebApplication2.Models;
@model List<Patient>

<div class="container">
    <div class="row">
        <h1 class="text-danger mt-3 text-center">Patients</h1>
        <div class="col-lg-12">
            <a asp-controller="Admin" asp-action="AddOrUpdatePatient" class="text-white btn btn-danger border">
                Add New Record
            </a>

            <table class="table table-hover mt-3 table-striped">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Image</th>
                        <th>Blood Group</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </tr>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name

                                </td>
                                <td>
                                    @item.Age
                                </td>
                                <td>
                                    <img src="/assets/img/@item.ImageUrl" alt="@item.Name" width="150" height="150" />
                                </td>
                                <td>
                                    @item.BloodGroup.Name
                                </td>
                                <td>
                                    @item.City.Name
                                </td>
                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @item.CreatedAt
                                </td>

                                <td>
                                    <a asp-controller="Admin" asp-action="AddOrUpdatePatient" class="text-white btn btn-warning" asp-route-id="@item.Id">
                                        Edit
                                    </a>

                                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeletePatient" asp-route-id="@item.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
